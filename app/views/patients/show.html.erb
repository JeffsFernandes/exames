<div class="wrapper col4">
  <div id="container">
    <div id="content">
		<p id="notice"><%= notice %></p>

		<p>
		  <b>Gender:</b>
		  <%= @patient.sexo %>
		</p>

		<p>
		  <b>Passage:</b>
		  <%= @patient.passagem %>
		</p>

		<p>
		  <b>Birth date:</b>
		  <%= @patient.data_nascimento %>
		</p>

		<p>
		  <b>Records:</b>
		  <%= @patient.prontuario %>
		</p>


		<%= link_to 'Edit', edit_patient_path(@patient) %> |
		<%= link_to 'Back', patients_path %>

    </div>
    <div class="clear"></div>
  </div>
</div>



