<div class="wrapper col4">
  <div id="container">
    <div id="content">
	  	<table summary="Drugs" cellpadding="0" cellspacing="0">
		<thead>
		  <tr>
		    <th>Name</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		</thead>
		<% light = true %>
		<% @drugs.each do |drug| %>
		<% if light %>
		  <tr class="light">
		<% else %>
		  <tr class="dark">
		<% end %>
	    <td><%= drug.nome %></td>
	    <td><%= link_to 'Show', drug %></td>
	    <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
	    <td><%= link_to 'Destroy', drug, confirm: 'Are you sure?', method: :delete %></td>
		<% light = !light%>
		  </tr>
		<% end %>
		</table>
		<%= will_paginate @drugs %><br/>
		
		<%= link_to 'New Drug', new_drug_path %>
	</div>
   <div class="clear"></div>
  </div>
</div>